<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Header: Chào mừng + Đăng xuất -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txtWelcome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chào mừng"
            android:textSize="20dp"
            android:textColor="@color/xanh"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng xuất"
            android:backgroundTint="@color/red"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <!-- Search bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/xanh"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="Logo"
            android:src="@drawable/logo" />

        <EditText
            android:id="@+id/edtSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableRight="@drawable/ic_searchh"
            android:drawablePadding="8dp"
            android:hint="Tìm kiếm sản phẩm..."
            android:paddingEnd="8dp"
            android:textSize="14sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Danh mục sản phẩm -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="8dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btnTatCa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tất cả"
                android:textSize="10dp"
                android:layout_marginStart="6dp"/>


            <Button
                android:id="@+id/btnDienThoai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điện thoại"
                android:textSize="10dp"
                android:layout_marginStart="6dp"/>

            <Button
                android:id="@+id/btnLaptop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Laptop"
                android:textSize="10dp"
                android:layout_marginStart="6dp"/>

            <Button
                android:id="@+id/btnTablet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tablet"
                android:textSize="10dp"
                android:layout_marginStart="6dp"/>

            <Button
                android:id="@+id/btnPhuKien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phụ kiện"
                android:textSize="10dp"
                android:layout_marginStart="6dp"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Danh sách sản phẩm -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProducts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Bottom navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:weightSum="3"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home" />
            <TextView
                android:text="Trang chủ"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:layout_height="2dp"
                android:layout_width="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ivCart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_cart" />
            <TextView
                android:text="Giỏ hàng"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:layout_height="2dp"
                android:layout_width="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ivPerson"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_person" />
            <TextView
                android:text="Hồ sơ"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:layout_height="2dp"
                android:layout_width="2dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
